<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_main"
    app:startDestination="@id/fragment_splash">

    <fragment
        android:id="@id/fragment_splash"
        android:name="com.kshitijpatil.tazabazar.splash.SplashFragment"
        android:label="SplashFragment">
        <action
            android:id="@+id/action_fragment_splash_to_fragment_main"
            app:destination="@id/fragment_main"
            app:launchSingleTop="true"
            app:popUpTo="@id/fragment_splash"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@id/fragment_main"
        android:name="com.kshitijpatil.tazabazar.MainFragment"
        android:label="MainFragment" />

    <fragment
        android:id="@id/navigation_home"
        android:name="com.kshitijpatil.tazabazar.home.HomeFragment"
        android:label="HomeFragment" />

    <fragment
        android:id="@id/navigation_favorite"
        android:name="com.kshitijpatil.tazabazar.favorite.FavoriteFragment"
        android:label="FavoriteFragment" />

    <fragment
        android:id="@id/navigation_cart"
        android:name="com.kshitijpatil.tazabazar.cart.CartFragment"
        android:label="CartFragment" />

    <fragment
        android:id="@id/navigation_orders"
        android:name="com.kshitijpatil.tazabazar.orders.OrdersFragment"
        android:label="OrdersFragment" />

    <fragment
        android:id="@id/navigation_profile"
        android:name="com.kshitijpatil.tazabazar.profile.ProfileFragment"
        android:label="ProfileFragment" />

</navigation>